{
    "name": "mlprimitives.candidates.sigma_error_thresholding.extract_anomalies",
    "contributors": ["Ihssan Tinawi <itinawi@mit.edu>"],
    "description": "mlprimitives.candidates.sigma_error_thresholding.extract_anomalies",
    "classifiers": {
        "type": "preprocessor",
        "subtype": "feature_extractor"
    },
    "modalities": ["timeseries"],
    "primitive": "mlprimitives.candidates.sigma_error_thresholding.extract_anomalies",
    "produce": {
        "args": [
            {
                "name": "errors",
                "type": "list"
            },
            {
                "name": "num_sigmas",
                "type": "int",
                "description": "the constant of sigmas to count as threshold"
            }
        ],
        "output": [
            {
                "name": "anomaly_sequences",
                "type": "list"
            }
        ]
    },
    "hyperparameters": {
        "tunable": {
            "num_sigmas": {
                "type": "int",
                "default": 2,
                "range" : [
                    1,
                    5
                ]
            }
        },
        "fixed": {}
    }
}
